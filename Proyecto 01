void pantalla06(){
  pushMatrix();
  noStroke();
  fill(gradaclaro);
  rect(0,300,1100,200);
  fill(gradaoscuro);
  rect(0,360,1100,40);
  rect(0,420,1100,40);
  rect(0,480,1100,20);
    
  //Pedestal
  fill(sombra2);
  ellipse(600,335,140,30);
  fill(amarillomedio);
  rect(570,310,60,30);
  fill(amarilloclaro);
  rect(580,260,40,70);
  fill(amarillomedio);
  rect(570,280,60,10);
  fill(amarillooscuro);
  rect(570,250,60,30);
  fill(amarillosombra);
  ellipse(600,264,32,6);
    
  textFont(fuente2);
  textSize(60);
  textAlign(CENTER);
  fill(255);
  text("¡FELICIDADES!",width/2,94);
    
  textSize(30);
  textLeading(25);
  text("Presiona ' m '\n para volver al menú",width/2,418);
    
  //Sombra
  noStroke();
  fill(sombra2);
  ellipse(480,335,140,30);
 
  if((defensa1<=0)&&(mana2==0)){
    magritte.magritte(370,-18);
    magritte.premiomagritte();
    pantalla = 5;
  }
  if((defensa1<=0)&&(mana2==1)){
    mucha.mucha(150,-18);
    mucha.premiomucha();
    pantalla = 5;
  }
  if((defensa1<=0)&&(mana2==2)){
    boticelli.boticelli(-70,-18);
    boticelli.premioboticelli();
    pantalla = 5;
  }
  if((defensa1<=0)&&(mana2==3)){
    warhol.warhol(-290,-18);
    warhol.premiowarhol();
    pantalla = 5;
  }
  if((defensa1<=0)&&(mana2==4)){
    gogh.gogh(-510,-18);
    gogh.premiogogh();
    pantalla = 5;
  } 
  
  if((defensa2<=0)&&(mana1==0)){
    magritte.magritte(370,-18);
    magritte.premiomagritte();
    pantalla = 5;
  }
  if((defensa2<=0)&&(mana1==1)){
    mucha.mucha(150,-18);
    mucha.premiomucha();
    pantalla = 5;
  }
  if((defensa2<=0)&&(mana1==2)){
    boticelli.boticelli(-70,-18);
    boticelli.premioboticelli();
    pantalla = 5;
  }
  if((defensa2<=0)&&(mana1==3)){
    warhol.warhol(-290,-18);
    warhol.premiowarhol();
    pantalla = 5;
  }
  if((defensa2<=0)&&(mana1==4)){
    gogh.gogh(-510,-18);
    gogh.premiogogh();
    pantalla = 5;
  }
  
  if((defensa1<=0)&&(mana2==0)){
    magritte.magritte(370,-18);
    magritte.premiomagritte();
    pantalla = 5;
  }
  if((defensa1<=0)&&(mana2==1)){
    mucha.mucha(150,-18);
    mucha.premiomucha();
    pantalla = 5;
  }
  if((defensa1<=0)&&(mana2==2)){
    boticelli.boticelli(-70,-18);
    boticelli.premioboticelli();
    pantalla = 5;
  }
  if((defensa1<=0)&&(mana2==3)){
    warhol.warhol(-290,-18);
    warhol.premiowarhol();
    pantalla = 5;
  }
  if((defensa1<=0)&&(mana2==4)){
    gogh.gogh(-510,-18);
    gogh.premiogogh();
    pantalla = 5;
  }
  
  if((defensa2<=0)&&(mana1==0)){
    magritte.magritte(370,-18);
    magritte.premiomagritte();
    pantalla = 5;
  }
  if((defensa2<=0)&&(mana1==1)){
    mucha.mucha(150,-18);
    mucha.premiomucha();
    pantalla = 5;
  }
  if((defensa2<=0)&&(mana1==2)){
    boticelli.boticelli(-70,-18);
    boticelli.premioboticelli();
    pantalla = 5;
  }
  if((defensa2<=0)&&(mana1==3)){
    warhol.warhol(-290,-18);
    warhol.premiowarhol();
    pantalla = 5;
  }
  if((defensa2<=0)&&(mana1==4)){
    gogh.gogh(-510,-18);
    gogh.premiogogh();
    pantalla = 5;
  }
  
 popMatrix();
  
  keyReleased();
  if ((pantalla == 5) && (key == 'm')) {
    pantalla = 0;
    mana1 = 0;
    mana2 = 0;
    vida = 160;
    defensa1 = 160;
    defensa2 = 160;
  }
}
