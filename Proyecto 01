  void premiogogh(){
    //van gogh
    fill(orejas);
    rect(595,244,10,20);
  
  }
}

Personajes magritte;
Personajes mucha;
Personajes boticelli;
Personajes warhol;
Personajes gogh;

PFont fuente1, fuente2, fuente3;

color cuadro = #009966;
color letracuadro = #990000;
color gradaclaro = #9A999E;
color gradaoscuro = #727176;
color sombra1 = #2B2B2B;
color sombra2 = #5B5B5F;
color orejas = #CEC093;
color amarillomedio = #D3B72A;
color amarilloclaro = #E8CD2D;
color amarillooscuro = #BA9E27;
color amarillosombra = #A38B24;
color manzana = #55973D;
color palo = #5E3F33;

int pantalla;
int mana1;
int mana2;

int vida = 160;
int vida1;
int vida2;
int defensa1 = 160;
int defensa2 = 160;
int ataque1;
int ataque2;
int turno;
int turno1;
int turno2;

Personajes jugador1;
Personajes jugador2;

void setup(){
  size(1100,500);
  
  fuente1 = createFont("Impact",10);
  fuente2 = createFont("Pixelade",10);
  fuente3 = createFont("pixelmix Regular",10);
  
  magritte = new Personajes();
  mucha = new Personajes();
  boticelli = new Personajes();
  warhol = new Personajes();
  gogh = new Personajes();
  
  jugador1 = new Personajes();
  jugador2 = new Personajes();
  
}

void draw(){
  background(#1E1E1E);
  
  switch(pantalla){
    case 0:
    pantalla01();
    break;
    case 1:
    pantalla02();
    break;
    case 2:
    pantalla03();
    break;
    case 3:
    pantalla04();
    break;
    case 4:
    pantalla05();
    break;
    case 5:
    pantalla06();
    break;
  }
  println(key);
}
