void pantalla05(){//COMBATE
  pushMatrix();
  textFont(fuente3);
  textSize(18);
  textAlign(CENTER);
  fill(255);
  text("Defensa",550,50);
   
  text("Presiona",331,400);
  text("para atacar",332,472);
  
  text("Presiona",771,400);
  text("para atacar",772,472);
  
  textFont(fuente2);
  textSize(50);
  text("Jugador 1",329,99);
  text("Jugador 2",775,99);
  
  noStroke();
  fill(cuadro);
  rect (260,410,140,40);
  rect (700,410,140,40);
  
  textFont(fuente1);
  textSize(25);
  textAlign(CENTER);
  fill(letracuadro);
  text("'a'",329,440);
  text("'ñ'",769,440);
   
  //Sombra
  noStroke();
  fill(sombra1);
  ellipse(329,355,140,30);
  ellipse(769,355,140,30);
  
  //JUGADOR1
    switch(mana1) {
    case 0:
    jugador1.magritte(220,0);
    pantalla = 4;
    ataque1 = 40;
    turno1 = 0;
    vida1 = 0;
    break;
    case 1:
    jugador1.mucha(0,0);
    pantalla = 4;
    ataque1 = 30;
    turno1 = 0;
    vida1 = 1;
    break;
    case 2:
    jugador1.boticelli(-220,0);
    pantalla = 4;
    ataque1 = 25;
    turno1 = 0;
    vida1 = 2;
    break;
    case 3:
    jugador1.warhol(-440,0);
    pantalla = 4;
    ataque1 = 30;
    turno1 = 0;
    vida1 = 3;
    break;
    case 4:
    jugador1.gogh(-660,0);
    pantalla = 4;
    ataque1 = 40;
    turno1 = 0;
    vida1 = 4;
    break;
    }
    
    //JUGADOR2
    switch(mana2) {
    case 0:
    jugador2.magritte(660,0);
    pantalla = 4;
    ataque2 = 40;
    turno2 = 1;
    vida2 = 0;
    break;
    case 1:
    jugador2.mucha(440,0);
    pantalla = 4;
    ataque2 = 30;
    turno2 = 1;
    vida2 = 1;
    break;
    case 2:
    jugador2.boticelli(220,0);
    pantalla = 4;
    ataque2 = 25;
    turno2 = 1;
    vida2 = 2;
    break;
    case 3:
    jugador2.warhol(0,0);
    pantalla = 4;
    ataque2 = 30;
    turno2 = 1;
    vida2 = 3;
    break;
    case 4:
    jugador2.gogh(-220,0);
    pantalla = 4;
    ataque2 = 40;
    turno2 = 1;
    vida2 = 4;
    break;
    }
  
    textFont(fuente3);
    textSize(55);
    textAlign(CENTER);
    fill(cuadro);
    
  //DEF1
  switch(vida1){
    case 0:
    noStroke();
    fill(cuadro);
    rect(250,30,defensa1,30);
    break;
    case 1:
    noStroke();
    fill(cuadro);
    rect(250,30,defensa1,30);
    break;
    case 2:
    noStroke();
    fill(cuadro);
    rect(250,30,defensa1,30);
    break;
    case 3:
    noStroke();
    fill(cuadro);
    rect(250,30,defensa1,30);
    break;
    case 4:
    noStroke();
    fill(cuadro);
    rect(250,30,defensa1,30);
    break;
  }
  
    //DEF2
    switch(vida2){
    case 0:
    noStroke();
    fill(cuadro);
    rect(695,30,defensa2,30);
    break;
    case 1:
    noStroke();
    fill(cuadro);
    rect(695,30,defensa2,30);
    break;
    case 2:
    noStroke();
    fill(cuadro);
    rect(695,30,defensa2,30);
    break;
    case 3:
    noStroke();
    fill(cuadro);
    rect(695,30,defensa2,30);
    break;
    case 4:
    noStroke();
    fill(cuadro);
    rect(695,30,defensa2,30);
    break;
  }
  
  //Turno
  switch(turno){
  case 0:
  if(keyPressed){
    if((key == 'a')||(key == 'a')){
      defensa2 = defensa2 - ataque1;
      turno = 1;
    }
  }
  break;
  case 1:
  if(keyPressed){
    if((key == 'ñ')||(key == 'ñ')){
      defensa1 = defensa1 - ataque2;
      turno = 0;
    }
  }
  break;
}

if(defensa1<=0){
    pantalla = 5;
  }
  if(defensa2<=0){
    pantalla = 5;
  }

  popMatrix();
 
}
