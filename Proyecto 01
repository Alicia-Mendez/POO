  void magritte(int x, int y){
  
  pushMatrix();
  translate(x,y);
  
  //Pies, Cuello y Brazo
  stroke(piel);
  strokeWeight(10);
  strokeCap(SQUARE);
  line(101,320,101,350);
  line(119,320,119,350);
  
  line(110,259,110,270);
  
  line(34,230,37,211);
  
