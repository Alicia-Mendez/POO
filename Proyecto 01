  textSize(35);
  textAlign(CENTER);
  fill(letracuadro);
  text("Presiona ESPACIO",width/2,383);
    
  textFont(fuente2);
  textSize(40);
  fill(255);
  text("para comenzar",width/2,430);
  popMatrix();
  
  keyPressed();
  if ((pantalla == 0) && (key == ' ')){
    pantalla = 1;
  }
}
